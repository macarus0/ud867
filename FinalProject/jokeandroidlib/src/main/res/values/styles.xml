<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@android:color/holo_green_light</item>
        <item name="colorPrimaryDark">@android:color/holo_green_dark</item>
        <item name="colorAccent">@android:color/holo_purple</item>
    </style>

    <style name="Text" parent="AppTheme">
        <item name="android:padding">8sp</item>
        <item name="android:layout_margin">4sp</item>
    </style>

    <style name="Card" parent="Text">
        <item name="android:textSize">22sp</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:elevation" tools:targetApi="lollipop">2dp</item>
        <item name="android:layout_height">80sp</item>
    </style>

    <style name="AppTheme.NoActionBar"  parent="AppTheme">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="StepNumber" parent="AppTheme">
        <item name="android:textColor">@android:color/white</item>=
        <item name="android:gravity">center</item>
        <item name="android:textSize">64sp</item>
    </style>

    <style name="JokeText" parent="Text">
        <item name="android:textSize">16sp</item>
    </style>

    <style name="OfflineErrorMessage" parent="AppTheme">
        <item name="android:textSize">16sp</item>
        <item name="android:padding">8dp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

</resources>